<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Comptador" parent="Theme.Material3.DayNight">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background color of the activity. -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Theme colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/red_700</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="android:colorForegroundInverse">@color/white</item>
        <item name="android:colorAccent">@color/purple_500</item>
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/purple_500</item>
        <item name="android:colorControlHighlight">@color/purple_500</item>
        <item name="android:colorButtonNormal">@color/purple_500</item>
    </style>

    <style name="Theme.Comptador" parent="Base.Theme.Comptador" />
</resources>